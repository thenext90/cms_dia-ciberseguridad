---
import { ShieldCheck, Mail, Phone, MapPin, ChevronDown } from 'lucide-astro';
import DateTimeWidget from './DateTimeWidget.astro';
---

<header class="bg-gray-900/80 backdrop-blur-md shadow-lg sticky top-0 z-50 text-white">
  <!-- Top bar with contact info -->
  <div class="hidden sm:block bg-gradient-to-r from-gray-900 to-blue-900 py-1.5">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex items-center justify-between text-xs text-gray-300">
        <div class="flex items-center space-x-6">
          <span class="flex items-center space-x-2">
            <Mail size="14" />
            <span class="hidden md:inline">contacto@cmsconsultores.cl</span>
          </span>
          <span class="flex items-center space-x-2">
            <Phone size="14" />
            <span class="hidden md:inline">+56 9 99462223</span>
          </span>
          <span class="hidden md:flex items-center space-x-2">
            <MapPin size="14" />
            <span>La Reina, Santiago, Chile</span>
          </span>
        </div>
        <DateTimeWidget />
      </div>
    </div>
  </div>

  <!-- Main navigation -->
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2">
          <img class="h-10 w-auto" src="/assets/logo-cybersec.png" alt="CMS Consultores Ciberseguridad">
          <span class="font-bold text-xl text-cyan-300">CMS Consultores</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-8">
        <a href="/" class="text-sm font-medium text-gray-200 hover:text-cyan-400 transition-colors">Inicio</a>
        
        <div class="relative group">
          <button class="flex items-center space-x-1 text-sm font-medium text-gray-200 hover:text-cyan-400 transition-colors">
            <span>Servicios de Seguridad</span>
            <ChevronDown size="16" />
          </button>
          <div class="absolute left-0 mt-2 w-60 bg-gray-800 rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10 border border-cyan-700/50">
            <div class="py-2">
              <a href="#iso27001" class="block px-4 py-2 text-sm text-gray-300 hover:bg-cyan-800 hover:text-white">Consultoría ISO 27001</a>
              <a href="#continuity" class="block px-4 py-2 text-sm text-gray-300 hover:bg-cyan-800 hover:text-white">Continuidad del Negocio</a>
              <a href="#training" class="block px-4 py-2 text-sm text-gray-300 hover:bg-cyan-800 hover:text-white">Capacitación y Phishing</a>
              <a href="#audit" class="block px-4 py-2 text-sm text-gray-300 hover:bg-cyan-800 hover:text-white">Auditoría de Sistemas</a>
            </div>
          </div>
        </div>

        <a href="#about" class="text-sm font-medium text-gray-200 hover:text-cyan-400 transition-colors">Sobre Nosotros</a>
        <a href="#contact" class="text-sm font-medium text-gray-200 hover:text-cyan-400 transition-colors">Contacto</a>

        <a href="#assessment" class="bg-cyan-500 text-gray-900 px-4 py-2 rounded-md text-sm font-semibold hover:bg-cyan-400 transition-all">
          Evaluación Rápida
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="lg:hidden">
        <button id="mobile-menu-button" class="text-gray-300 hover:text-white">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="lg:hidden hidden bg-gray-800/95 border-t border-cyan-800" id="mobile-menu">
    <div class="px-4 py-6 space-y-4">
      <a href="/" class="block text-gray-200 font-medium hover:text-cyan-400">Inicio</a>
      <a href="#services" class="block text-gray-200 font-medium hover:text-cyan-400">Servicios</a>
      <a href="#about" class="block text-gray-200 font-medium hover:text-cyan-400">Sobre Nosotros</a>
      <a href="#contact" class="block text-gray-200 font-medium hover:text-cyan-400">Contacto</a>
      <a href="#assessment" class="block mt-4 text-center bg-cyan-500 text-gray-900 px-4 py-2 rounded-md text-sm font-semibold hover:bg-cyan-400 transition-all">
        Evaluación Rápida
      </a>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
